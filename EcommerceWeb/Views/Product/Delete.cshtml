@model Product

<form method="post">
    <input asp-for="Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h3 class="text-primary">Delete Product</h3>
            <hr />
        </div>
    </div>
    <div class="mb-3 row p-1">
        <label asp-for="Title" class="p-0"></label>
        <input asp-for="Title" disabled class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="mb-3 row p-1">
        <label asp-for="Description" class="p-0"></label>
        <input asp-for="Description" disabled class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="mb-3 row p-1">
        <label asp-for="MadeIn" class="p-0"></label>
        <input asp-for="MadeIn" disabled class="form-control" />
        <span asp-validation-for="MadeIn" class="text-danger"></span>
    </div>
    <div class="mb-3 row p-1">
        <label asp-for="Brand" class="p-0"></label>
        <input asp-for="Brand" disabled class="form-control" />
        <span asp-validation-for="Brand" class="text-danger"></span>
    </div>
    <div class="mb-3 row p-1">
        <label asp-for="ListPrice" class="p-0"></label>
        <input asp-for="ListPrice"  disabled class="form-control" />
        <span asp-validation-for="ListPrice" class="text-danger"></span>
    </div>
    <div class="mb-3 row p-1">
        <label asp-for="Price" class="p-0"></label>
        <input asp-for="Price" disabled class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <div class="mb-3 row p-1">
        <label asp-for="Price50" class="p-0"></label>
        <input asp-for="Price50" disabled class="form-control" />
        <span asp-validation-for="Price50" class="text-danger"></span>
    </div>
    <div class="mb-3 row p-1">
        <label asp-for="Price100" class="p-0"></label>
        <input asp-for="Price100" disabled class="form-control" />
        <span asp-validation-for="Price100" class="text-danger"></span>
    </div>
    <div class="row">
        <div class="col-6 col-md-3">
            <button type="submit" class="btn btn-danger form-control">Delete</button>
        </div>
        <div class="col-6 col-md-3">
            <a asp-controller="Product" asp-action="Index" class="btn btn-secondary border form-control">Back to list</a>
        </div>

    </div>

</form>
